<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.security.dao.UserMapper">
    <select id="loadUserByUsername" resultType="com.security.entity.User"
            parameterType="java.lang.String">
        select * from user where username=#{username}
    </select>
    <select id="getUserRolesByUid" parameterType="java.lang.Integer"
            resultType="com.security.entity.Role">
        select r.id,r.name,r.nameZh from role r,user_role ur where r.id=ur.rid and ur.uid=#{id}
    </select>
</mapper>